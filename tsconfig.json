{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["es2020.string"],
    //   "allowJs": true,
    //   "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
    //   "noEmit": true,
    //   "esModuleInterop": true,
    //   "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx"
    ]
  }
